require-b2 5.2 ;

project /boost/sync ;

explicit
    [ alias boost_sync : build//boost_sync ]
    [ alias boost_sync_with_support : build//boost_sync_with_support ]
    [ alias all : boost_sync boost_sync_with_support test ]
    ;

call-if : boost-library sync
    : install boost_sync
    ;
